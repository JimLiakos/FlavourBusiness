                                        <MenuItem Header="{x:Static Resx:Resources.HallLayoutLabelFontMenuItemHeader}" Command="{Binding HallLayoutShapeLabelFont}">
                                            <MenuItem.Icon>
                                                <Image Source="Resources/Images/Metro/font16.png" Width="16"/>
                                            </MenuItem.Icon>

                                        </MenuItem>
