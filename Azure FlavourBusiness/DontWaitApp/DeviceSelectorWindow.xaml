<Window x:Class="DontWaitApp.DeviceSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DontWaitApp"
        mc:Ignorable="d"
        Title="DeviceSelectorWindow" Height="138" Width="448">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="147*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="226*"/>
            <ColumnDefinition Width="56*"/>

        </Grid.ColumnDefinitions>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Select Device" Height="16" Width="70"></TextBlock>
        <ComboBox Grid.Column="2" VerticalAlignment="Center" Height="22" ItemsSource="{Binding DevicesIDS}" SelectedIndex="{Binding SelectedIndex}"  ></ComboBox>


    </Grid>
</Window>
